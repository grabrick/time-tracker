#include <wx/wx.h>
#include <functional>

class MyApp : public wxApp {
public:
    virtual bool OnInit();
};

class MyFrame : public wxFrame {
public:
    MyFrame(const wxString& title, const std::function<void(wxCommandEvent&)>& onQuit, const std::function<void(wxCommandEvent&)>& onAbout);
};

bool MyApp::OnInit() {
    auto onQuit = [](wxCommandEvent& event) {
        wxTheApp->Exit();
    };

    auto onAbout = [](wxCommandEvent& event) {
        wxMessageBox("This is a wxWidgets Hello World example",
                     "About Hello World", wxOK | wxICON_INFORMATION);
    };

    MyFrame *frame = new MyFrame("TimeTrack", onQuit, onAbout);
    frame->Show(true);
    return true;
}

MyFrame::MyFrame(const wxString& title, const std::function<void(wxCommandEvent&)>& onQuit, const std::function<void(wxCommandEvent&)>& onAbout)
        : wxFrame(NULL, wxID_ANY, title)
{
    wxMenu *menuFile = new wxMenu;
    menuFile->Append(wxID_ABOUT, "&About...\tCtrl-A", "Show about dialog");
    menuFile->AppendSeparator();
    menuFile->Append(wxID_EXIT, "E&xit\tCtrl-Q", "Quit this program");

    wxMenuBar *menuBar = new wxMenuBar;
    menuBar->Append(menuFile, "&File");

    SetMenuBar(menuBar);

    Bind(wxEVT_MENU, onQuit, wxID_EXIT);
    Bind(wxEVT_MENU, onAbout, wxID_ABOUT);
}

wxIMPLEMENT_APP(MyApp);
